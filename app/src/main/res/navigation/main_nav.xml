<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pathfinder.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_boardFragment"
            app:destination="@id/boardFragment" />

        <action
            android:id="@+id/action_homeFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_homeFragment_to_teamBuildingFragment"
            app:destination="@id/teamBuildingFragment" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.pathfinder.ui.userProfile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >

        <action
            android:id="@+id/action_userProfileFragment_to_boardFragment"
            app:destination="@id/boardFragment" />

        <action
            android:id="@+id/action_storeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_teamBuildingFragment"
            app:destination="@id/teamBuildingFragment" />
    </fragment>
    <fragment
        android:id="@+id/boardFragment"
        android:name="com.example.pathfinder.ui.board.view.BoardFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" >

        <action
            android:id="@+id/action_boardFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_boardFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_boardFragment_to_teamBuildingFragment"
            app:destination="@id/teamBuildingFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.pathfinder.ui.aiChatBot.AiFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_ai_chat" />
    <fragment
        android:id="@+id/teamBuildingFragment"
        android:name="com.example.pathfinder.ui.teamBuilding.TeamBuildingFragment"
        android:label="fragment_team_building"
        tools:layout="@layout/fragment_team_building" />
</navigation>