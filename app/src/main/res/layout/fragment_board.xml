<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:id="@+id/mentorBtn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingTop="14dp"
            android:paddingBottom="6dp"
            android:layout_marginStart="24dp"
            android:textOff="멘토"
            android:textOn="멘토"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:textColor="@color/tab_colors"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ToggleButton
            android:id="@+id/menteeBtn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingTop="14dp"
            android:paddingBottom="6dp"
            android:layout_marginStart="24dp"
            android:textOff="멘티"
            android:textOn="멘티"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/tab_colors"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mentorBtn" />


        <Button
            android:id="@+id/button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_search"
            app:layout_constraintEnd_toStartOf="@id/button2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mentorBtn">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/boardListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/boardBottomPadding"
                     />

                <ImageView
                    android:id="@+id/boardBottomPadding"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/transparent_ripple_color"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/writeBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_writebtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
