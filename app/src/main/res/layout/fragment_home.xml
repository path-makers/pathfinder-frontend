<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="26dp"
                android:text="PathFinder"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/Gray_700"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_home_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_message2"
                android:background="@color/transparent_ripple_color"
                app:layout_constraintEnd_toStartOf="@id/button_home_alarm"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="20dp" />

            <ImageButton
                android:id="@+id/button_home_alarm"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_alarm"
                android:background="@color/transparent_ripple_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/titleTextView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/search_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:adjustViewBounds="true"
                        android:background="@color/transparent_ripple_color"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_searchbanner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/recommendTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="24dp"
                        android:text="추천 글"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/search_button" />

                    <TextView
                        android:id="@+id/recommendTextView_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_marginTop="32dp"
                        android:text="더보기"
                        android:textColor="@color/Blue_500"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/search_button" />

                    <HorizontalScrollView
                        android:id="@+id/recommendView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recommendTextView"
                        android:scrollbars="none">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/recommend_regImg1"
                                android:layout_width="180dp"
                                android:layout_height="170dp"
                                android:src="@drawable/ic_rec1"
                                android:background="@drawable/rectangle_15radius"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <ImageView
                                android:id="@+id/recommend_regImg2"
                                android:layout_width="180dp"
                                android:layout_height="170dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_rec2"
                                android:background="@drawable/rectangle_15radius"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/recommend_regImg1" />

                            <ImageView
                                android:id="@+id/recommend_regImg3"
                                android:layout_width="180dp"
                                android:layout_height="170dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_rec3"
                                android:background="@drawable/rectangle_15radius"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/recommend_regImg2" />

                            <ImageView
                                android:id="@+id/recommend_regImg4"
                                android:layout_width="180dp"
                                android:layout_height="170dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_rec4"
                                android:background="@drawable/rectangle_15radius"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/recommend_regImg3" />

                            <ImageView
                                android:id="@+id/recommend_regImg5"
                                android:layout_width="180dp"
                                android:layout_height="170dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/rectangle_15radius"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/recommend_regImg4" />

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="170dp"
                                android:background="@color/transparent_ripple_color"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/recommend_regImg5"/>



                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </HorizontalScrollView>


                    <ImageButton
                        android:id="@+id/chatButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:adjustViewBounds="true"
                        android:background="@color/transparent_ripple_color"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_chatbanner"
                        app:layout_constraintTop_toBottomOf="@id/recommendView" />


                    <!--mentor-->
                    <ImageView
                        android:id="@+id/mentor_regImg"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/rectangle_10radius"
                        app:layout_constraintTop_toBottomOf="@id/chatButton" />

                    <TextView
                        android:id="@+id/mentorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="24dp"
                        android:text="멘토 게시판"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mentor_regImg" />

                    <TextView
                        android:id="@+id/mentorTextView_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="34dp"
                        android:layout_marginTop="32dp"
                        android:text="더보기"
                        android:textColor="@color/Blue_500"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mentor_regImg" />

                    <ListView
                        android:id="@+id/mentorList"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        app:layout_constraintTop_toBottomOf="@id/mentorTextView"/>

                    <!--mentee-->
                    <ImageView
                        android:id="@+id/mentee_regImg"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/rectangle_10radius"
                        app:layout_constraintTop_toBottomOf="@id/mentor_regImg" />

                    <TextView
                        android:id="@+id/menteeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="24dp"
                        android:text="멘티 게시판"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mentee_regImg" />

                    <TextView
                        android:id="@+id/menteeTextView_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="34dp"
                        android:layout_marginTop="32dp"
                        android:text="더보기"
                        android:textColor="@color/Blue_500"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mentee_regImg" />

                    <ListView
                        android:id="@+id/menteeList"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        app:layout_constraintTop_toBottomOf="@id/menteeTextView"/>

                    <!--team-->
                    <ImageView
                        android:id="@+id/team_regImg"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/rectangle_10radius"
                        app:layout_constraintTop_toBottomOf="@id/mentee_regImg" />

                    <TextView
                        android:id="@+id/teamTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="24dp"
                        android:text="팀원모집"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/team_regImg" />

                    <TextView
                        android:id="@+id/teamTextView_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="34dp"
                        android:layout_marginTop="32dp"
                        android:text="더보기"
                        android:textColor="@color/Blue_500"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/team_regImg" />

                    <ListView
                        android:id="@+id/teamList"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        app:layout_constraintTop_toBottomOf="@id/teamTextView"/>

                    <TextView
                        android:id="@+id/adbanner"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_marginTop="24dp"
                        android:text="☆ 광고문의 000-0000-0000 ★"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:background="@color/Green_100"
                        android:textAlignment="center"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/team_regImg"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/transparent_ripple_color"
                        app:layout_constraintTop_toBottomOf="@id/adbanner"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>